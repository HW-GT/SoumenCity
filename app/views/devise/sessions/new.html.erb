<%= render 'partial/navbar' %>
<!-- <hr style="margin-top: -15px; border-color: #dcdcdc;"> -->

<div class="container" style="margin-top: 70px; margin-bottom: 70px; text-align: center;">
  <div class="row">
    <div class="col-md-4 col-md-offset-4 text-center" style="border: solid 1px #dcdcdc; padding: 40px;">

     <h3 style="margin-top: 0px; margin-bottom: 30px;">ログイン</h3>

      <div>
        <%= render 'partial/deviseErrorMsg' %>
        <%= link_to "Facebookでログインする", user_facebook_omniauth_authorize_path,class: "btn btn-facebook", :style => "font-size: 1.0em; border-radius: 0; width: 200px; padding: 12px;" %>
      </div>

      <hr style="margin-top: 35px; margin-bottom: 30px;">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, class: "form-control", placeholder: "",　autofocus: true, :style => "border-radius: 0;" %>
        </div>

        <div class="form-group">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password, class: "form-control", placeholder: "", autocomplete: "off", :style => "border-radius: 0;" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :次回から自動ログインにする %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "ログイン" ,class: "btn btn-primary", :style => "font-size: 1.0em; border-radius: 0; width: 200px; padding: 12px;" %>
        </div>
      <% end %>

    <div style="text-align: left; color: #666666; margin-top: 40px;">
      会員登録は<u><%= link_to("こちら",  new_user_registration_path , method: :get ) %></u>
    </div>
     <div style="text-align: left; color: #666666; margin-top: 5px;">
      パスワードを忘れた方は<u><%= link_to("こちら", new_user_password_path , method: :get ) %></u>
    </div>

    </div>
  </div>
</div>

<%= render 'partial/footer' %>






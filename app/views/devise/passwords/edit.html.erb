<%= render 'partial/navbar' %>
<!-- <hr style="margin-top: 0px; border-color: #dcdcdc;"> -->

<div class="container" style="margin-top: 70px; margin-bottom: 70px; text-align: center;">
  <div class="row">
    <div class="col-md-4 col-md-offset-4 text-center" style="border: solid 1px #dcdcdc; padding: 40px;">

     <h3 style="margin-top: 0px;">パスワード再発行</h3>
     <h5 style="margin-top: 0px; margin-bottom: 30px;">新しいパスワードに変更します</h5>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render 'partial/deviseErrorMsg' %>
        <%= f.hidden_field :reset_password_token %>

        <div class="field">
          <%= f.label :password, "新しいパスワード" %>
          <% if @minimum_password_length %>
            <b>（<%= @minimum_password_length %>文字以上）</b>
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control", placeholder: "",　autofocus: true, :style => "border-radius: 0;" %>
        </div><br>

        <div class="field">
          <%= f.label :password_confirmation, "新しいパスワード（再入力）" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "",　autofocus: true, :style => "border-radius: 0;" %>
        </div>

      <div class="actions">
        <%= f.submit "パスワードを変更する",class: "btn btn-primary", :style => "margin-top: 30px; font-size: 1.0em; border-radius: 0; width: 200px; padding: 12px; background-color: #666666; border-color: #666666;" %>
      </div>
    <% end %>

    </div>
  </div>
</div>

<%= render 'pages/footer' %>


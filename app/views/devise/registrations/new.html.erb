<%= render 'partial/navbar' %>
<!-- <hr style="margin-top: -15px; border-color: #dcdcdc;"> -->

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

<div class="container" style="margin-top: 70px; margin-bottom: 70px; text-align: center;">
  <div class="row">
    <div class="col-md-4 col-md-offset-4 text-center" style="border: solid 1px #dcdcdc; padding: 40px;">

      <h3 style="margin-top: 0px; margin-bottom: 30px;">新規会員登録</h3>

      <div>
        <%= render 'partial/deviseErrorMsg' %>
        <%= link_to "Facebookで会員登録", user_facebook_omniauth_authorize_path,class: "btn btn-facebook", :style => "font-size: 1.0em; border-radius: 0; width: 200px; padding: 12px;" %>
      </div>

      <hr style="margin-top: 35px; margin-bottom: 30px;">

      <div class="form-group">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email,:class => 'form-control radius',:placeholder => "メールアドレス", autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
        <b>（<%= @minimum_password_length %>文字以上）</b>
        <% end %><br />
        <%= f.password_field :password,:class => 'form-control radius',:placeholder => "パスワード", autocomplete: "off" %>
      </div>

      <div class="form-group">
        <%= f.label :パスワード（再入力） %><br />
        <%= f.password_field :password_confirmation,:class => 'form-control radius',:placeholder => "パスワード（確認）", autocomplete: "off" %>
      </div>

      <div class="actions" style="margin-top: 30px; margin-bottom: 0px;">
        <%= f.submit "メールで会員登録",class: "btn btn-primary", :style => "font-size: 1.0em; border-radius: 0; width: 200px; padding: 12px;" %>
      </div>

      <div style="text-align: center; color: #666666; margin-top: 25px;">
        すでに会員登録されている方は<u><b><%= link_to("こちら", new_user_session_path, method: :get ) %></b></u>
      </div>
      
    </div>
  </div>  
</div>

<% end %>

<%= render 'partial/footer' %>



<%= render 'partial/navbar' %>
<%= render 'partial/sub_navbar'%>

<div class="container">

  <h3>プロフィール編集</h3>
  <hr>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render 'partial/deviseErrorMsg' %>

      <div class="row">
        <div class="col-md-3 row-space-4">
          <center>

            <!-- プロフィール画像を表示 -->
            <div>
              <div class="user-profile row-space-4 text-center" style="border: solid 0.5px #a9a9a9;">
                <%= image_tag @user.image, class: "profile-full img-square" %>
              </div>
            </div>

            <%= render 'partial/profileverticalnavbar'%>

            <!-- 自分のプロフィールへのリンク -->
            <%= link_to "自分のプロフィールを確認する", user_path(current_user), class: "btn btn-default" %><br><br>
            
          </center>
        </div>

        <div class="col-md-9">
          <div class="panel panel-default">
            <div class="panel-heading" style="font-size: 15px;">基本情報　<span style="font-size: 13px;"> ー 自分の人柄や状況を知ってもらいましょう ー</span></div>
            <div class="panel-body">

              <div class="form-padding">
                <div class="row" style="text-align: right; padding-top: 12px;"> 
                  <div class="col-md-3">
                    <h5>ニックネーム（公開）</h5>
                  </div>
                  <div class="col-md-3 form-group">
                    <%= f.text_field :name, autofocus: true, :placeholder => "入力", :class => 'form-control radius', required: "true" %>
                  </div>
                  <div class="col-md-3">
                    <h5>会員種別（公開）</h5>
                  </div>
                  <div class="col-md-3 form-group">
                    <%= f.select :account_type, [["個人","個人"], ["法人（企業・店舗）","法人"]], {prompt:"選択"}, {required: 'true', autofocus: 'true', class: 'form-control radius'} %>
                  </div>                  
                </div>

                <div class="row" style="text-align: right; padding-top: 12px;"> 
                  <div class="col-md-3">
                    <h5>住所／都道府県（公開）</h5>
                  </div>
                  <div class="col-md-3 form-group" style="padding-bottom: 10px;">
